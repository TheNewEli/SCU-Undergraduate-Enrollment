<!--pages/view/pages/dialog/index.wxml-->
<view class='container'>
  <content-title name="个人信息管理" describe="请仔细填写">
    <content-card
      class="content"
      name="基本信息填写"
    >
      <view class='buttun-wrapper'>
        <l-input
          label="姓名"
          type="text"
          clear="{{true}}"
          placeholder="请输入真实姓名"          
          label-width="170"
          value="{{name}}"
          disabled="{{!editable}}"/>
        <l-input
          label="性别"
          type="number"           
          placeholder="请输入男/女"          
          label-width="170"
          value="{{gender}}"
          disabled="{{!editable}}"/>
        <l-input
          label="生源地" 
          type="text"          
          label-width="170"
          placeholder="按照xx省 xx市/区 xx县..的格式详细填写"
          value="{{originalAddress}}"
           disabled="{{!editable}}"/>
        <l-input
          label="就读高中" 
          type="text"          
          label-width="170"
          placeholder="请输入高中全称，不要简写"
          value="{{highSchool}}"
           disabled="{{!editable}}"/>
        <l-input
          label="所属科目" 
          type="text"          
          placeholder="请输入文科/理科"          
          label-width="170"
          value="{{subject}}"
           disabled="{{!editable}}"/>
        <l-input
          label="手机号"
          type="digit"
          placeholder="常用手机号，作为联系方式"   
          label-width="170"
          value="{{telNumber}}"
           disabled="{{!editable}}"/>
      </view>
    </content-card>


    <content-card
      class="content"
      name="成绩信息"
    >
      <view class='buttun-wrapper'>
        <l-input
          label="高考成绩"
          type="digit"
          placeholder="必填"   
          required="{{true}}"       
          label-width="170"
          value="{{score}}"
           disabled="{{!editable}}"/>
        <l-input
          label="位次" 
          required="{{true}}" 
          placeholder="必填"  
          label-width="170"
          placeholder="省/直辖市/自治区排名"
          value="{{rank}}"
           disabled="{{!editable}}"/>
      </view>

    </content-card>

    <view bindtap="onEdit" class="save-container">
    <image wx:if="{{!editable}}" class="save-img" src="/images/edit.png"></image>
    <!-- <image wx:elif="{{!completed}}" class="save-img" src="/images/error.png"></image> -->
    <image wx:elif="{{!completed}}" class="save-img" src="/images/right.png"></image>
  </view>
  </content-title>

   
</view>
